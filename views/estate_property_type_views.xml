<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <header>
                    <button name="%(action_estate_property_offer)d"
                            type="action"
                            string="Offers"
                            icon="fa-money"
                            context="{'search_default_property_type_id': active_id}"/>

                </header>
                <sheet>
                    <group col="2">
                        <field name="name" placeholder="Name" nolabel="1" colspan="2"/>
                        <field name="sequence"/>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="selling_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_type_kanban" model="ir.ui.view">
        <field name="name">estate.property.type.kanban</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div  t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <strong><field name="name"/></strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Action -->
    <record id="action_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menu -->
    <!-- Property Types Menu -->
    <menuitem id="menu_estate_property_type"
              name="Property Types"
              parent="menu_real_estate_settings"
              action="action_estate_property_type"
              sequence="10"/>

</odoo>
