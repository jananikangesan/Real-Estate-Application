<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (List) View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden"/>
                <field name="garage"/>
                <field name="property_type_id"/>

            </tree>
        </field>
    </record>

   <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <!-- Optional archived field -->
                    <field name="active" invisible="1"/>

                 <!-- Top section (basic info) in two columns -->
                    <group col="2">
                        <!-- Left Column -->
                        <field name="name" placeholder="Title"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>

                        <!-- Right Column -->
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price" readonly="1"/>
                        </group>
                    </group>

                    <!-- Tabs -->
                    <notebook>
                        <page string="Description">
                            <group col="2">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                     <field name="state"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group col="2">
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offers_ids">
                                <tree editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="price"/>
                                    <field name="status"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="partner_id"/>
                                            <field name="price"/>
                                            <field name="status"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <!-- Action to Open the View -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">real.estate.property</field>
    <field name="arch" type="xml">
      <search string="Search Properties">

        <!-- Basic search field -->
        <field name="name"/>

        <!-- Filter for Available Properties -->
        <filter name="available"
                string="Available"
                domain="[('state', 'in', ['new', 'offer_received'])]" />

        <!-- Other filters -->
        <filter name="has_garden" string="Has Garden" domain="[('garden', '=', True)]" />
        <filter name="has_garage" string="Has Garage" domain="[('garage', '=', True)]" />

        <!-- Group By -->
        <group expand="1" string="Group By">
          <filter name="group_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
          <filter name="group_garden_orientation" string="Garden Orientation" context="{'group_by': 'garden_orientation'}"/>
          <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
        </group>

        <!-- Advanced fields -->
        <field name="bedrooms"/>
        <field name="expected_price"/>
        <field name="state"/>
        <field name="garden_orientation"/>
        <field name="postcode"/>
        <field name="property_type_id"/>
        <field name="tag_ids"/>
        <filter name="group_tags" string="Tags" context="{'group_by':'tag_ids'}"/>

      </search>
    </field>
  </record>

<!--    kanban view-->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_example">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="property_type_id"/>
                <field name="tag_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name"/>
                            </strong><br/>

                            <div>
                                <span>Type: </span><field name="property_type_id"/>
                            </div>
                            <div>
                                <span>Expected: </span><field name="expected_price"/>
                            </div>
                            <div>
                                <span>Selling: </span><field name="selling_price"/>
                            </div>

                            <!-- Tags displayed with colors -->
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

       <!-- Top-Level Menu -->
        <menuitem id="menu_real_estate_root"
                  name="Real Estate"
                  sequence="10"/>

        <!-- Second-Level Menu (Advertisements) under Real Estate -->
        <menuitem id="menu_advertisement"
                  name="Advertisements"
                  parent="menu_real_estate_root"
                  sequence="20"/>

        <menuitem id="menu_real_estate_settings"
              name="Settings"
              parent="menu_real_estate_root"
              sequence="50"/>

        <!-- Third-Level Menu (Properties) under Advertisements -->
        <menuitem id="menu_estate_properties"
                  name="Properties"
                  parent="menu_advertisement"
                  action="action_estate_property"
                  sequence="30"/>

</odoo>
